<LinearLayout
    android:gravity="start|top"
    android:theme="@style/Theme.AppCompat" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        app:hintEnabled="true"
        android:id="@+id/dialog_importPluginUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText style="@style/EditText"
            android:layout_width="match_parent"
            android:hint="@string/input_dic_name"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>