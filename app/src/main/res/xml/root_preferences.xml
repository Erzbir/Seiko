        <DropDownPreference app:title="清除缓存" app:key="cleanCache"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="程序信息">
        <DropDownPreference
                app:key="verInfo"
                app:title="0"
                app:summary="1"/>
        <DropDownPreference
                app:key="buildTime"
                app:title="0"
                app:summary="1"/>
    </PreferenceCategory>
</PreferenceScreen>